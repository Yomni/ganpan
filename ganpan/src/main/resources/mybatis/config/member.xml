<?xml version="1.0" encoding="UTF-8"?>
<!-- Sql Mapper -->
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
	<sql id="selectMember">
 		select e_mail,nickname,password from member
 	</sql>
 	<select id="findMemberByEmail" resultType="memberVO">
 		<include refid="selectMember"></include>
 		where e_mail=#{value}
 	</select>
	<insert id="register" parameterType="memberVO">
		insert into member(nickname,e_mail,password) values(#{nickName},#{eMail},#{password})
	</insert>
	<select id="eMailCheck" resultType="int">
		select count(*) from member where e_mail=#{value}
	</select>
		<select id="nickNameCheck" resultType="int">
		select count(*) from member where nickname=#{value}
	</select>
</mapper>



