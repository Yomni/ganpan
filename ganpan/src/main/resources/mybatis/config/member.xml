<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- MyBatis에서 namespace는 필수적으로 명시해야 함 -->
 <mapper namespace="member">   
 	<sql id="selectMember">
		select nickname,e_mail,password from member
	</sql>
	<resultMap id="memberMap" type="memberVO">
		<result property="nickName" column="nickname"/>
		<result property="eMail" column="e_mail"/>
		<result property="password" column="password"/>
	</resultMap>
	<select id="nickNameLogin" parameterType="Map" resultType="memberVO">
		<include refid="selectMember" />
		WHERE nickname=#{id} and password=#{password}
	</select>
	<select id="eMailLogin" parameterType="Map" resultMap="memberMap">
		<include refid="selectMember" />
		WHERE e_mail=#{id} and password=#{password}
	</select>
 	<select id="findMemberByNickName" resultMap="memberMap">
 		<include refid="selectMember" />
 		where nickname=#{value}
 	</select>
	<insert id="registerMember" parameterType="memberVO">
		insert into member(nickname,e_mail,password) values(#{nickName},#{eMail},#{password})
	</insert>
	<select id="eMailCheck" resultType="int">
		select count(*) from member where e_mail=#{value}
	</select>
		<select id="nickNameCheck" resultType="int">
		select count(*) from member where nickname=#{value}
	</select>
	<update id="updateMember" parameterType="memberVO">
		UPDATE member
		SET e_mail = #{eMail}, password=#{password}
		WHERE nickname=#{nickName}
	</update>
</mapper>



